<div class="row task" >  
  <div class="col-md-6 col-md-offset-3">
    <h2><%= @task.title%></h2><hr>
    <p>Due date: <strong class="task"><%= @task.duedate%></strong></p>
    <p>Content: <strong class="task"><%= @task.content%></strong></p>
    <p>Location:<strong class="task"><%= @task.location%></strong></p>
        <% if @task.image_file_name == nil %>
             <p></p>
        <% else %>
            <p><%= image_tag @task.image.url(:medium)%></p>
        <% end %>
      <hr><button type="button" class="btn btn-info btn-lg cancel"><%= link_to 'Edit task', edit_task_path, class:"alignleft" %></button>

      <button type="button" class="btn btn-info btn-lg" data-toggle="modal" data-target="#myModal">Delete</button>



      <!-- select email to invite them to task -->
      <!-- <p>Input User's Email to Invite Them to Task</p> -->
      <%= form_tag task_path, :method => "get" do %>
        <%= label_tag :"Input User's Email and Invite Them to Task" %>
        <%= text_field :recipients, params[:recipients], class: "recipientInput form-control" %>
        <div class="recipientInputMsg" style="color:red"></div><br>
        <%= submit_tag :"invite people", class: "btn btn-default" %>
      <% end %>
 
      
      <%= content_tag :div, class: "users_class", data: {users: @users} do %>
      <% end %>

  <!-- modal for delete task-->
  <div id="myModal" class="modal fade" role="dialog">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal">&times;</button>
          <h4 class="modal-title">Do you want to delete this task?</h4>
        </div>

        <div class='modal-body'>
          <h2><%= @task.title%></h2><hr>
          <p>Due date: <strong class="task"><%= @task.duedate%></strong></p>
          <p>Content: <strong class="task"><%= @task.content%></strong></p>
          <p>Location:<strong class="task"><%= @task.location%></strong></p>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-default" data-dismiss="modal"><%= link_to 'Cancel', current_user %></button>
          <button type="button" class="btn btn-default" data-dismiss="modal"><%= link_to 'Delete', task_path,method: :delete %></button>
        </div>
      </div>
    </div>
      <p>Today in <%= @task.location%>, weather feels like <%= @weather_feel %> degrees, and it's <%= @weather_condition %></p>
  </div>

