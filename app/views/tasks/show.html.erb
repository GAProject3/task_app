



<div class="row" >  
  <div class="col-md-6 col-md-offset-3">
    <h2><%= @task.title%></h2><hr>
    <p>Due date: <strong class="task"><%= @task.duedate%></strong></p>
    <p>Content: <strong class="task"><%= @task.content%></strong></p>
    <p>Location:<strong class="task"><%= @task.location%></strong></p>
        <% if @task.image_file_name == nil %>
             <p></p>
        <% else %>
            <p><%= image_tag @task.image.url(:medium)%></p>
        <% end %>

        <p>Today <%= @weather_day %>day in the <%= @task.location%>, weather feels like <%= @weather_feel %> degrees, and it's <%= @weather_condition %></p>

<hr><%= link_to 'Edit task', edit_task_path, class:"alignleft" %>


<%= link_to 'Delete task', task_path,method: :delete, data:{ confirm: 'Are you sure you want to delete this task?'}, class:"alignright" %>
  </div>
</div>



