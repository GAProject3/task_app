<div class="row task" >  
  <div class="col-md-6 col-md-offset-3">
    <h2><%= @task.title%></h2><hr>
    <p>Due date: <strong class="task"><%= @task.duedate%></strong></p>
    <p>Content: <strong class="task"><%= @task.content%></strong></p>
    <p>Location:<strong class="task"><%= @task.location%></strong></p>
        <% if @task.image_file_name == nil %>
             <p></p>
        <% else %>
            <p><%= image_tag @task.image.url(:medium)%></p>
        <% end %>
<hr><button><%= link_to 'Edit task', edit_task_path, class:"alignleft" %></button>

<button id="delete-modal" class="alignright">Delete</button>
  <div id='modal'>
    <div class='modal-content'>
      <div class='modal-header'>
        <h3>Do you want to delete this task?</h3>
        <button id='close'>X</button>
      </div>
      <div class='modal-body'>
        <h2><%= @task.title%></h2><hr>
        <p>Due date: <strong class="task"><%= @task.duedate%></strong></p>
        <p>Content: <strong class="task"><%= @task.content%></strong></p>
        <p>Location:<strong class="task"><%= @task.location%></strong></p>
        <%= link_to 'Cancel', current_user %>
        <%= link_to 'Delete task', task_path,method: :delete, class:"alignright" %>
        
      </div>
    </div>
  </div>

  </div>
</div>



