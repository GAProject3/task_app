<div class="row">
	<div class="col-md-9">


		<h1> Here are your messages</h1><hr>
		
		<%= @message.sender_id %>
		
		<%= @message.content %>
		
		<%= @message.attachment %>
		
	</div><br>

	<!-- double check button sizing and color -->


	
	<div class="col-md-3" style="border-left:1px solid rgba(0,0,0,0.2)">
