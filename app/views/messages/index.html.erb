<div class="row">
	<div class="col-md-11">
		<h1>All Messages for <%= @user.name %></h1><hr>

		<ul>
			<% @messages.each do |message| %>
			<li>
				<a href='/users/<%= @user.id%>/messages/<%= message.id%>'><%=  message.content %></a>
			
			</li><br>
			<% end %>
			
		</ul>
	</div>
	<div class="col-md-1" style="border-left:1px solid rgba(0,0,0,0.2)">
		<a class="btn btn-primary htn-lg" href="/users/<%= @user.id%>/messages/new">Compose a Message</a>
	</div>
</div>
