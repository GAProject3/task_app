<div class="row">
	<div class="col-md-11">

		<h1>Task List</h1><hr>

		<% @tasks.each do |task| %>

			<a href="/tasks/<%= task.id %>"><div class="taskDisplay">
			Title: <%= task.title %><br>
			Due Date: <%= task.duedate %><br>
			</div></a>
		<% end %>

	</div>
	<div class="col-md-1" style="border-left:1px solid rgba(0,0,0,0.2)">
		<a class="btn btn-primary htn-lg" href="/tasks/new">New Task</a>
	</div>
</div>